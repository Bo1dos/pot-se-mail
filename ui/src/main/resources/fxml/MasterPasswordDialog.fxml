<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.study.ui.fx.controller.MasterPasswordDialogController"
      spacing="8" style="-fx-padding:12;">
  <Label text="Master Password"/>
  <PasswordField fx:id="passwordField" promptText="Enter master password"/>
  <PasswordField fx:id="confirmField" promptText="Confirm (for initialization)"/>
  <HBox spacing="8" alignment="CENTER_RIGHT">
    <Region HBox.hgrow="ALWAYS"/>
    <Button text="Unlock" onAction="#onUnlock"/>
    <Button text="Initialize" onAction="#onInitialize"/>
    <Button text="Cancel" onAction="#onCancel"/>
  </HBox>
  <Label fx:id="infoLabel" style="-fx-text-fill: red;"/>
</VBox>
