<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="mailPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>ru.study.persistence.entity.AccountEntity</class>
    <class>ru.study.persistence.entity.KeyEntity</class>
    <class>ru.study.persistence.entity.FolderEntity</class>
    <class>ru.study.persistence.entity.MessageWrappedKeyEntity</class>
    <class>ru.study.persistence.entity.MessageEntity</class>
    <class>ru.study.persistence.entity.AttachmentEntity</class>
    <class>ru.study.persistence.entity.MasterPasswordEntity</class>

    <!-- Убрать все свойства из persistence.xml -->
  </persistence-unit>
</persistence>